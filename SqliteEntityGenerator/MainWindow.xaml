<Window x:Class="SqliteEntityGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SqliteEntityGenerator"
        mc:Ignorable="d"
        Title="Sqlite Entity Generator" Height="480.129" Width="591.389" ResizeMode="CanMinimize">
    <Grid>
        <Label x:Name="label" Content="Sqlite database path:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtDbPath" IsReadOnly="True" Height="23" Margin="136,13,88,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="btnSelect" Content="..." Margin="0,13,33,0" VerticalAlignment="Top" Height="23" Click="btnSelect_Click" HorizontalAlignment="Right" Width="39"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="88" IsEnabled="False" Height="24" Click="btnSave_Click"/>
        <ListBox x:Name="lstClasses" Margin="10,41,11,39"/>

    </Grid>
</Window>
